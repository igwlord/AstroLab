<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Gradientes -->
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#9ca3ff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#7c87e8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6366f1;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="flaskGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#fffbeb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fef3c7;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="liquidGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="innerGlow" cx="50%" cy="50%">
      <stop offset="0%" style="stop-color:#a5b4fc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6366f1;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Fondo circular con gradiente azul/púrpura -->
  <circle cx="256" cy="256" r="256" fill="url(#bgGradient)"/>
  
  <!-- Resplandor interior -->
  <circle cx="256" cy="256" r="220" fill="url(#innerGlow)" opacity="0.3"/>
  
  <!-- Borde exterior oscuro -->
  <circle cx="256" cy="256" r="240" fill="none" stroke="#1e1b4b" stroke-width="24"/>
  
  <!-- Frasco de laboratorio (Flask) centrado -->
  <g transform="translate(256, 256)">
    <!-- Cuello del frasco -->
    <rect x="-40" y="-145" width="80" height="55" fill="url(#flaskGradient)" 
          stroke="#1e1b4b" stroke-width="10" rx="10"/>
    
    <!-- Tapa del frasco -->
    <rect x="-55" y="-165" width="110" height="28" fill="#1e1b4b" rx="14"/>
    <rect x="-50" y="-160" width="100" height="22" fill="#4338ca" rx="11"/>
    
    <!-- Cuerpo del frasco (forma de matraz) -->
    <path d="M -40,-90 Q -120,-10 -100,85 L 100,85 Q 120,-10 40,-90 Z" 
          fill="url(#flaskGradient)" stroke="#1e1b4b" stroke-width="10"/>
    
    <!-- Contorno interno del frasco -->
    <path d="M -35,-90 Q -110,-10 -92,78 L 92,78 Q 110,-10 35,-90 Z" 
          fill="none" stroke="#1e1b4b" stroke-width="3" opacity="0.3"/>
    
    <!-- Líquido interior -->
    <path d="M -35,15 Q -85,45 -75,78 L 75,78 Q 85,45 35,15 Z" 
          fill="url(#liquidGradient)"/>
    
    <!-- Onda del líquido -->
    <path d="M -35,15 Q -10,8 15,15 T 35,15" 
          fill="none" stroke="#1e1b4b" stroke-width="4" stroke-linecap="round"/>
    
    <!-- Brillo en el líquido -->
    <ellipse cx="-35" cy="35" rx="25" ry="18" fill="#ffffff" opacity="0.5"/>
    <ellipse cx="-35" cy="35" rx="12" ry="9" fill="#ffffff" opacity="0.7"/>
    
    <!-- Burbujas en el líquido superior -->
    <circle cx="-15" cy="-35" r="10" fill="#fbbf24" opacity="0.7"/>
    <circle cx="10" cy="-75" r="12" fill="#fbbf24" opacity="0.7"/>
    <circle cx="20" cy="-115" r="9" fill="#fbbf24" opacity="0.7"/>
    
    <!-- Burbujas pequeñas adicionales -->
    <circle cx="-25" cy="-100" r="6" fill="#fbbf24" opacity="0.5"/>
    <circle cx="5" cy="-50" r="7" fill="#fbbf24" opacity="0.5"/>
  </g>
  
  <!-- Estrellas decorativas (4 puntas) -->
  <!-- Estrella superior derecha -->
  <g transform="translate(390, 160)">
    <path d="M 0,-22 L 6,-6 L 22,0 L 6,6 L 0,22 L -6,6 L -22,0 L -6,-6 Z" 
          fill="#fbbf24" stroke="#1e1b4b" stroke-width="4"/>
    <circle cx="0" cy="0" r="4" fill="#ffffff" opacity="0.8"/>
  </g>
  
  <!-- Estrella inferior izquierda -->
  <g transform="translate(130, 360)">
    <path d="M 0,-20 L 5,-5 L 20,0 L 5,5 L 0,20 L -5,5 L -20,0 L -5,-5 Z" 
          fill="#fbbf24" stroke="#1e1b4b" stroke-width="4"/>
    <circle cx="0" cy="0" r="3" fill="#ffffff" opacity="0.8"/>
  </g>
</svg>
